#!/bin/bash

# Git Post-Receive Hook for Automated Deployment
# Place this file in .git/hooks/post-receive and make it executable

echo "ğŸ”„ Post-receive hook triggered..."

# Get the repository directory
REPO_DIR=$(git rev-parse --show-toplevel)

# Check if deployment script exists
if [ -f "${REPO_DIR}/deployment.sh" ]; then
    echo "ğŸš€ Running automated deployment..."
    cd "${REPO_DIR}"
    ./deployment.sh
    
    if [ $? -eq 0 ]; then
        echo "âœ… Deployment completed successfully!"
    else
        echo "âŒ Deployment failed!"
        exit 1
    fi
else
    echo "âš ï¸  Deployment script not found at ${REPO_DIR}/deployment.sh"
    echo "ğŸ“ Manual deployment may be required"
fi